    const card = document.getElementById("bookplace")
    const librosArray = JSON.parse(libros);

    let inner = "";

    librosArray.map(e => {
        inner += `
        <div class="col-4" >
            <div class="card card-body" >
                <h2>${e.nombreLibro}</h2>
                <p>Autor: ${e.autorLibro}</p>
                <p>Tema: ${e.temaLibro}</p>
                <p>AÃ±o: ${e.year}</p>
            </div>
        </div>
        `
        return 0;
    })

    card.innerHTML = inner
</script>
